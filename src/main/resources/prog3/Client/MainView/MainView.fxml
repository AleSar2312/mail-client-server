<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="prog3.Client.MainView.MainViewController"
            prefHeight="700.0" prefWidth="1000.0">

   <top>
      <VBox>
         <HBox style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <Label text="Account: " style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="accountLbl" style="-fx-font-size: 14px;"/>
         </HBox>
         <Separator/>
      </VBox>
   </top>

   <center>
      <SplitPane dividerPositions="0.4">
         <VBox style="-fx-background-color: #f5f5f5;">
            <padding>
               <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Posta in arrivo" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ListView fx:id="inboxList" VBox.vgrow="ALWAYS" style="-fx-background-color: white;"/>
         </VBox>

         <VBox spacing="15" style="-fx-background-color: white;">
            <padding>
               <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Dettaglio Email" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Separator/>

            <GridPane hgap="10" vgap="10">
               <Label text="Da:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
               <Label fx:id="lblFrom" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

               <Label text="A:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
               <Label fx:id="lblTo" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" wrapText="true"/>

               <Label text="Oggetto:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
               <Label fx:id="lblSubject" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" wrapText="true"/>

               <Label text="Data:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
               <Label fx:id="lblDate" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>

            <Separator/>

            <Label text="Messaggio:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="txtBody" editable="false" wrapText="true" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: #fafafa;"/>

            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
               <Button fx:id="btnNew" text="Nuovo" onAction="#onNew" prefWidth="110"
                       style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
               <Button fx:id="btnReply" text="Rispondi" onAction="#onReply" prefWidth="110"/>
               <Button fx:id="btnReplyAll" text="Rispondi a tutti" onAction="#onReplyAll" prefWidth="130"/>
               <Button fx:id="btnForward" text="Inoltra" onAction="#onForward" prefWidth="110"/>
               <Button fx:id="btnDelete" text="Elimina" onAction="#onDelete" prefWidth="110"
                       style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            </HBox>
         </VBox>
      </SplitPane>
   </center>

   <bottom>
      <HBox style="-fx-background-color: #e0e0e0; -fx-padding: 8;">
         <Label fx:id="statusLbl" text="Pronto" style="-fx-font-size: 12px;"/>
      </HBox>
   </bottom>
</BorderPane>