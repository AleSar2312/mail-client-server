<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="prog3.Client.Login.LoginController"
      alignment="CENTER" spacing="20" prefWidth="400" prefHeight="300"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="Mail Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TextField fx:id="emailField" promptText="Email" prefWidth="300"
               style="-fx-font-size: 14px;"/>

    <Button fx:id="loginBtn" text="Accedi" onAction="#onLogin"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"
            prefWidth="150"/>

    <Label fx:id="errorLbl" textFill="red" visible="false"/>

</VBox>